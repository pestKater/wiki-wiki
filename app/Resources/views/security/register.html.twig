{% extends 'base.html.twig' %}
{% trans_default_domain "index" %}

{% block title %}
    {{ 'register.pagename'|trans }}
{% endblock %}

{% block body %}

<div class="login-container">
    <h2>{{ 'register.pagename'|trans }}</h2>
    <form class="form-horizontal" action="{{ path('register') }}" method="POST">
        <div class="form-group">
            <label for="username" class="col-sm-4 control-label">{{ 'register.username'|trans }}:</label>
            <div class="col-sm-8">
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-4 control-label">{{ 'register.email'|trans }}:</label>
            <div class="col-sm-8">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-4 control-label">{{ 'register.password'|trans }}:</label>
            <div class="col-sm-8">
                {{ form_widget(form.plainPassword.first) }}
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-sm-4 control-label">{{ 'register.password2'|trans }}:</label>
            <div class="col-sm-8">
                {{ form_widget(form.plainPassword.second) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <div class="checkbox">
                    <label>
                        {{ form_widget(form.terms) }} {{ 'register.terms'|trans({'%linkStartAgb%': '<a href="'~path('agb')~'">', '%linkEndAgb%': '</a>', '%linkStartPrivacy%': '<a href="'~path('privacy')~'">', '%linkEndPrivacy%': '</a>'}, "index") | raw }}
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <div class="checkbox">
                    <label>
                        {{ form_widget(form.newsletter) }} {{ 'register.newsletter'|trans }}
                    </label>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" name="submit" class="btn btn-primary">{{ 'register.submit'|trans }}</button>
            </div>
        </div>
    </form>
</div>

{% endblock %}
