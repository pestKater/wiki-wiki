{% trans_default_domain "index" %}

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{{ 'login.modaltitle'|trans }}</h4>
            </div>
            <form action="{{ path('login_check') }}" method="post" class="form-horizontal">
            <div class="modal-body">
                <div class="form-group">
                    <label for="username" class="col-sm-3 control-label">{{ 'login.username'|trans }}:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="username" name="_username" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">{{ 'login.password'|trans }}:</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="password" name="_password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input name="_remember_me" type="checkbox" checked> {{ 'login.remember'|trans }}
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'login.modalclose'|trans }}</button>
                <button type="submit" name="login" class="btn btn-primary">{{ 'login.submit'|trans }}</button>
            </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="registrationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{{ 'register.modaltitle'|trans }}</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="{{ path('register') }}" method="POST">
                    <div class="form-group">
                        <label for="username" class="col-sm-4 control-label">{{ 'register.username'|trans }}:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" required="required" id="form_username" name="form[username]">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-4 control-label">{{ 'register.email'|trans }}:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" required="required" id="form_email" name="form[email]">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-4 control-label">{{ 'register.password'|trans }}:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" required="required" id="form_plainPassword_first" name="form[plainPassword][first]">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="username" class="col-sm-4 control-label">{{ 'register.password2'|trans }}:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" required="required" id="form_plainPassword_second" name="form[plainPassword][second]">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="form_terms" name="form[terms]" required="required"> {{ 'register.terms'|trans({'%linkStartAgb%': '<a href="'~path('agb')~'">', '%linkEndAgb%': '</a>', '%linkStartPrivacy%': '<a href="'~path('privacy')~'">', '%linkEndPrivacy%': '</a>'}, "index") | raw }}
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="form_newsletter" name="form[newsletter]"> {{ 'register.newsletter'|trans }}
                                </label>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="form__token" name="form[_token]" value="{{ csrf_token('register') }}">
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" name="submit" class="btn btn-primary">{{ 'register.submit'|trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>